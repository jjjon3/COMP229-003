<%-include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title%></h1>
            <form class="form" method="POST" action="">
                <div class="form group">
                    <label for="titleTextField">Book Title</label>
                    <input type="text" class="form control" id="nameTextField" placeholder="Enter the Book Title" name="title" required>
                </div>

                <div class="form group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form control" id="descriptionTextField" placeholder="Enter a brief description of the book" name="description" required></textarea>
                </div>

                <div class="form group">
                    <label for="priceTextField">Price</label>
                    <input type="number" class="form control" id="priceTextField" placeholder="Enter the Book's Price" name="price" required>
                </div>

                <div class="form group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form control" id="authorTextField" placeholder="Enter the Book's Author" name="author" required>
                </div>

                <div class="form group">
                    <label for="genreTextField">Genre</label>
                    <input type="text" class="form control" id="genreTextField" placeholder="Enter the Book Genre" name="genre" required>
                </div>

                

                <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i> Submit</button>
                <a href="/books" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

<%-include ../partials/footer.ejs%>