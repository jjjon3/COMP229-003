<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h2><%=title%></h2>
            <form class="form" method="POST" action="">
                <div class="form group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form control" id="nameTextField" placeholder="Business Contact Name" name="name" required>
                </div>

                <div class="form group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form control" id="numberTextField" placeholder="Business Contact Number" name="number" required>
                </div>

                <div class="form group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form control" id="emailTextField" placeholder="Business Contact Email" name="email" required>
                </div>

                <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i> Submit</button>
                <a href="/businessContacts" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>